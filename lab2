2)
select Salesman_id,Name 
from SALESMAN s 
where 1<
 (select count(*) 
  from ORDERS o
  where s.Salesman_id =o.Salesman_id)
  
  Salesman_id	         Name
        10           	akash
3)select *
from SALESMAN
where Salesman_id in(select  Salesman_id 
              from SALESMAN s
              where exists(select *
                          from CUSTOMER c
                          where s.Salesman_id =c.Salesman_id )
    union
              select  Salesman_id 
              from SALESMAN s
              where  not exists(select *
                          from CUSTOMER c
                          where s.Salesman_id =c.Salesman_id ))
 output
